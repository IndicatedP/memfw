{
  "name": "memfw",
  "version": "0.1.0",
  "description": "Memory firewall with provenance tagging and attack detection",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "memfw": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cli": "node --loader ts-node/esm src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "memory",
    "firewall",
    "security",
    "llm",
    "agent"
  ],
  "author": "IndicatedP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IndicatedP/memfw.git"
  },
  "files": [
    "dist",
    "skill/hooks",
    "skill/bootstrap",
    "README.md"
  ],
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "dotenv": "^16.4.5",
    "openai": "^4.77.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.17.12",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
